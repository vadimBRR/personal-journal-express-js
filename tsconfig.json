{
  "compilerOptions": {
    "target": "es2021",   
    "lib": ["ES2021"],   
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }                            
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/", "**/*.test.ts"]
}
